<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,minimum-scale=1">
    <title>Login</title>
    <script src="https://code.jquery.com/jquery-3.6.3.js"
        integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
    <!-- the form awesome library is used to add icons to our form -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
    <!-- include the stylesheet file -->
    <link href="styles.css" rel="stylesheet" type="text/css">
    
</head>

<body>
    <div class="login">
        <h1 id="login-header">Login or Sign Up</h1>
        <form action="/login" method="POST" class="login-form">
            <label for="username">
                <!-- font awesome icon -->
                <i class="fas fa-user"></i>
            </label>
            <input type="text" name="user" placeholder="Username" id="username" required>
            <label for="password">
                <i class="fas fa-lock"></i>
            </label>
            <input type="password" name="pass" placeholder="Password" id="password" required>
            <input type="submit" value="Login">
            <p class="message">No Account? <a href="#">Sign Up</a></p>
        </form>
        <form action="/auth" method="POST" class="registration-form" id="reg-form">
            <input type="text" name="fullname" placeholder="fullname" id="username" required>
            <input type="text" name="username" placeholder="Username" id="username" required>
            <input type="text" name="email" placeholder="email" id="username" required>
            <input type="password" name="password" placeholder="Password" id="password" required>
            <input type="submit" value="Sign up">
            <p class="message">Already has Account? <a href="#">Login</a></p>
        </form>
        <!-- <a href="/todoList">login</a> -->
    </div>
    <script>
        $('.message a').click(function () {
            $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
        })
    </script>
</body>

</html>